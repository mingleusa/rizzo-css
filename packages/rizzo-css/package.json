{
  "name": "rizzo-css",
  "version": "0.0.30",
  "scripts": {
    "prepublishOnly": "cd ../.. && pnpm run lint:css:fix && pnpm run build:css && node scripts/copy-scaffold.js && node scripts/prepare-vanilla-scaffold.js"
  },
  "description": "A modern CSS design system with semantic theming, 14 themes, and accessible components (BEM). Optimized for Vanilla JS, Astro, and Svelte; same CSS and component styles for all.",
  "style": "dist/rizzo.min.css",
  "main": "dist/rizzo.min.css",
  "unpkg": "dist/rizzo.min.css",
  "jsdelivr": "dist/rizzo.min.css",
  "exports": {
    ".": {
      "style": "./dist/rizzo.min.css",
      "import": "./dist/rizzo.min.css",
      "require": "./dist/rizzo.min.css"
    }
  },
  "bin": {
    "rizzo-css": "./bin/rizzo-css.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".env.example",
    "bin",
    "scaffold/astro",
    "scaffold/utils",
    "scaffold/svelte",
    "scaffold/vanilla",
    "scaffold/astro-minimal",
    "scaffold/svelte-minimal"
  ],
  "keywords": [
    "css",
    "design-system",
    "theming",
    "bem",
    "accessibility",
    "vanilla",
    "astro",
    "svelte"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mingleusa/rizzo-css.git"
  },
  "homepage": "https://rizzo-css.vercel.app",
  "license": "MIT",
  "author": "mingleusa"
}