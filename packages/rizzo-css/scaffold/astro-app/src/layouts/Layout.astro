---
interface Props {
  title?: string;
}

const { title = '{{TITLE}}' } = Astro.props;
---
<!doctype html>
<html lang="en" data-theme="{{DATA_THEME}}">{{THEME_LIST_COMMENT}}
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/rizzo.min.css" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
