---
interface Props {
  variant?: 'primary' | 'success' | 'warning' | 'error' | 'info';
  size?: 'sm' | 'md' | 'lg';
  pill?: boolean;
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  pill = false,
  class: className = '',
} = Astro.props;

const variantClass = `badge--${variant}`;
const sizeClass = `badge--${size}`;
const pillClass = pill ? 'badge--pill' : '';
const classes = `badge ${variantClass} ${sizeClass} ${pillClass} ${className}`.trim();
---

<span class={classes}>
  <slot />
</span>
