# Algolia Search Configuration
# Copy this file to .env and fill in your Algolia credentials

# Public variables (exposed to client-side)
# These are safe to expose in the browser
PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id
PUBLIC_ALGOLIA_SEARCH_KEY=your-search-only-api-key
PUBLIC_ALGOLIA_INDEX_NAME=rizzo-css-docs

# Private variables (server-side only, never exposed to client)
# These should NEVER be committed or exposed in the browser
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_ADMIN_KEY=your-admin-api-key
ALGOLIA_INDEX_NAME=rizzo-css-docs

# Optional: Algolia configuration
# ALGOLIA_HITS_PER_PAGE=10
# ALGOLIA_ENABLE_ANALYTICS=true
