---
import CopyToClipboard from './CopyToClipboard.astro';
import Css3 from './icons/devicons/Css3.astro';
import Html5 from './icons/devicons/Html5.astro';
import Javascript from './icons/devicons/Javascript.astro';
import Nodejs from './icons/devicons/Nodejs.astro';
import AstroIcon from './icons/devicons/Astro.astro';
import Plaintext from './icons/devicons/Plaintext.astro';
import Git from './icons/devicons/Git.astro';
import Bash from './icons/devicons/Bash.astro';
import Svelte from './icons/devicons/Svelte.astro';
import TypeScript from './icons/devicons/TypeScript.astro';
import React from './icons/devicons/React.astro';
import Sass from './icons/devicons/Sass.astro';
import Ruby from './icons/devicons/Ruby.astro';
import Python from './icons/devicons/Python.astro';
import Rust from './icons/devicons/Rust.astro';
import Docker from './icons/devicons/Docker.astro';
import Playwright from './icons/devicons/Playwright.astro';
import Vue from './icons/devicons/Vue.astro';

interface Props {
  code: string;
  language?: string;
  class?: string;
}

const {
  code,
  language = '',
  class: className = '',
} = Astro.props;

const languageLabel = language || '';
const languageLower = language.toLowerCase();

const codeId = `code-${Math.random().toString(36).substr(2, 9)}`;
---

<div class={`code-block ${className}`.trim()}>
  <div class="code-block__header">
    {language && (
      <span class="code-block__language" aria-label={languageLabel}>
        {languageLower === 'css' && (
          <>
            <Css3 width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {languageLower === 'html' && (
          <>
            <Html5 width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {languageLower === 'javascript' && (
          <>
            <Javascript width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {languageLower === 'nodejs' && (
          <>
            <Nodejs width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {languageLower === 'astro' && (
          <>
            <AstroIcon width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {languageLower === 'plaintext' && (
          <>
            <Plaintext width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {languageLower === 'git' && (
          <>
            <Git width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {languageLower === 'svelte' && (
          <>
            <Svelte width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {(languageLower === 'typescript' || languageLower === 'ts') && (
          <>
            <TypeScript width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {(languageLower === 'react' || languageLower === 'jsx' || languageLower === 'tsx') && (
          <>
            <React width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {languageLower === 'vue' && (
          <>
            <Vue width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {(languageLower === 'sass' || languageLower === 'scss') && (
          <>
            <Sass width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {languageLower === 'ruby' && (
          <>
            <Ruby width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {languageLower === 'python' && (
          <>
            <Python width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {languageLower === 'rust' && (
          <>
            <Rust width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {languageLower === 'docker' && (
          <>
            <Docker width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {languageLower === 'playwright' && (
          <>
            <Playwright width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {(languageLower === 'bash' || languageLower === 'shell' || languageLower === 'sh') && (
          <>
            <Bash width={20} height={20} class="code-block__language-icon" />
            <span class="code-block__language-text">{languageLabel}</span>
          </>
        )}
        {!['css', 'html', 'javascript', 'nodejs', 'astro', 'plaintext', 'git', 'svelte', 'typescript', 'ts', 'react', 'jsx', 'tsx', 'vue', 'sass', 'scss', 'ruby', 'python', 'rust', 'docker', 'playwright', 'bash', 'shell', 'sh'].includes(languageLower) && (
          <span class="code-block__language-text">{language}</span>
        )}
        <span class="sr-only">{languageLabel}</span>
      </span>
    )}
    <span class="code-block__copy-wrap">
      <CopyToClipboard
        value={code}
        iconOnly
        buttonLabel="Copy code"
        format="code"
        label="Copy code to clipboard"
        class="code-block__copy"
      />
    </span>
  </div>
  <pre tabindex="0"><code id={codeId}>{code}</code></pre>
</div>

<style>
  .code-block {
    position: relative;
    margin: var(--spacing-4) 0;
    border-radius: var(--radius-lg);
    overflow: visible;
    background-color: var(--background-alt);
    border: 1px solid var(--border);
  }
  
  .code-block__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-2) var(--spacing-3);
    background-color: var(--background);
    border-bottom: 1px solid var(--border);
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
    overflow: visible;
    position: relative;
    z-index: 1;
  }
  
  .code-block__language {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    font-size: var(--font-size-xs);
    color: var(--text-dim);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wider);
    font-weight: var(--font-weight-medium);
  }
  
  .code-block__language-icon {
    display: block;
    flex-shrink: 0;
    color: var(--text-dim);
    width: var(--spacing-5); /* 20px - larger for better visibility */
    height: var(--spacing-5);
  }
  
  .code-block__language-icon svg {
    width: 100%;
    height: 100%;
  }
  
  .code-block__language-text {
    display: none;
  }
  
  /* Show text next to icon on large screens */
  @media (width >= 768px) {
  .code-block__language-text {
    display: inline;
    }
  }
  
  .code-block__copy-wrap {
    margin-left: auto;
    display: flex;
    align-items: center;
  }
  
  .code-block__copy-wrap :global(.copy-to-clipboard--icon-only) {
    min-width: var(--spacing-8);
    height: var(--spacing-8);
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  
  .code-block pre {
    margin: 0;
    padding: var(--spacing-4);
    overflow-x: auto;
    background-color: var(--background-alt);
    border-radius: 0 0 var(--radius-lg) var(--radius-lg);
  }
  
  .code-block code {
    font-family: var(--font-family-mono);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-relaxed);
    color: var(--text);
    white-space: pre;
    word-wrap: normal;
  }
  
  @media (width <= 640px) {
    .code-block__header {
      flex-direction: row; /* Keep horizontal layout on mobile */
      align-items: center; /* Vertically center all items */
      gap: var(--spacing-2);
    }
    
    .code-block__language {
      align-items: center; /* Ensure language icon is vertically centered */
    }
    
    .code-block__copy-wrap {
      flex-shrink: 0;
    }
  }
</style>
