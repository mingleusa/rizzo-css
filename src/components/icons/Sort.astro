interface Props {
  width?: number;
  height?: number;
  class?: string;
}

const { width = 20, height = 20, class: className = '' } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={width}
  height={height}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={className}
  aria-hidden="true"
>
  <title>Sort</title>
  <path d="m7 15 5 5 5-5" />
