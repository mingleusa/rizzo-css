---
interface Props {
  id?: string;
  name?: string;
  checked?: boolean;
  disabled?: boolean;
  /** Accessible label (visible or sr-only) */
  label?: string;
  class?: string;
}

const {
  id,
  name,
  checked = false,
  disabled = false,
  label,
  class: className = '',
} = Astro.props;
---

<label class={`switch ${className}`.trim()} for={id}>
  <input
    type="checkbox"
    id={id}
    name={name}
    class="switch__input"
    role="switch"
    aria-checked={checked}
    checked={checked}
    disabled={disabled}
  />
  <span class="switch__track" aria-hidden="true">
    <span class="switch__thumb" />
  </span>
  {label ? <span class="switch__label">{label}</span> : null}
</label>
