---
import DocsLayout from '../../../layouts/DocsLayout.astro';
import SvelteDocPage from '../../../components/svelte/docs/SvelteDocPage.svelte';
import Skeleton from '../../../components/Skeleton.astro';
---

<DocsLayout title="Svelte" description="Rizzo CSS components and examples for Svelte.">
  <div class="svelte-docs-wrapper">
    <div class="svelte-docs-loading" data-svelte-docs-loading role="status" aria-label="Loading Svelte docs" aria-busy="true">
      <div class="svelte-docs-loading-skeletons" aria-hidden="true">
        <Skeleton variant="text" label="" class="svelte-docs-skeleton-line" />
        <Skeleton variant="text" label="" class="svelte-docs-skeleton-line" />
        <Skeleton variant="text" label="" class="svelte-docs-skeleton-line svelte-docs-skeleton-line--short" />
      </div>
    </div>
    <SvelteDocPage slug="" client:only="svelte" />
  </div>
</DocsLayout>

<style>
  .svelte-docs-wrapper {
    position: relative;
    min-height: 12rem;
  }
  .svelte-docs-loading {
    padding: var(--spacing-4) 0;
  }
  .svelte-docs-loading.svelte-docs-loaded {
    display: none;
  }
  .svelte-docs-loading-skeletons {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-3);
    max-width: 40rem;
  }
  .svelte-docs-skeleton-line {
    width: 100%;
    height: 1.25rem;
  }
  .svelte-docs-skeleton-line--short {
    width: 60%;
  }
</style>
