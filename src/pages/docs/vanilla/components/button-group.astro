---
import DocsLayout from '../../../../layouts/DocsLayout.astro';
import CodeBlock from '../../../../components/CodeBlock.astro';
import AddComponentTabs from '../../../../components/AddComponentTabs.astro';

const copyableHtml = `<div class="button-group">
  <button type="button" class="btn">One</button>
  <button type="button" class="btn">Two</button>
  <button type="button" class="btn">Three</button>
</div>

<div class="button-group button-group--vertical" style="margin-top: 1rem;">
  <button type="button" class="btn">A</button>
  <button type="button" class="btn">B</button>
</div>`;
---

<DocsLayout title="Button Group — Vanilla" description="Group of buttons with vanilla HTML. Ensure Rizzo CSS is loaded.">
  <section>
    <h2>Button Group</h2>
    <p>Group of buttons with no gap. Use <code>button-group</code>; add <code>button-group--vertical</code> for vertical layout.</p>
    <AddComponentTabs componentName="ButtonGroup" />
    <div class="example">
      <div class="example-title">Live example</div>
      <div class="button-group">
        <button type="button" class="btn">One</button>
        <button type="button" class="btn">Two</button>
        <button type="button" class="btn">Three</button>
      </div>
    </div>
    <h3>HTML</h3>
    <CodeBlock code={copyableHtml} language="html" />
    <p><strong>Astro / Svelte:</strong> <a href="/docs/components/button-group">Astro</a> · <a href="/docs/svelte/components/button-group">Svelte</a></p>
  </section>
</DocsLayout>

<style>
  .example { margin: var(--spacing-6) 0; padding: var(--spacing-4); background: var(--background-alt); border: 1px solid var(--border); border-radius: var(--radius-lg); }
  .example-title { font-size: var(--font-size-sm); font-weight: var(--font-weight-medium); color: var(--text-dim); margin-bottom: var(--spacing-3); text-transform: uppercase; letter-spacing: var(--letter-spacing-wider); }
</style>
